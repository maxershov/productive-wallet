{
    "compilerOptions": {
        "jsx": "react",
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "."
    },
    "include": [
        "src/**/*",
        "index.d.ts",
        "tests/**/*"
    ],
    "exclude": [
        "./node_modules",
        "./build",
        "./dist",
        "./src/**/*.css",
    ],
    // for alias 
    "paths": {
        "SRC/*": [
          "src/*"
        ]
    }
}
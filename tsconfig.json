{
  "compilerOptions": {
    "jsx": "react",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
    }
  },
  "include": ["src/**/*", "index.d.ts", "declarations.d.ts", "tests/**/*"],
  "exclude": ["./node_modules", "./build", "./dist"],
}
